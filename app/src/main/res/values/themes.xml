<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FetchRewardsTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green_400</item>
        <item name="colorPrimaryVariant">@color/teal_300</item>
        <item name="colorOnPrimary">@color/amber_300</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="colorPrimary">@color/teal_300</item>
        <item name="colorSurface">@color/light_green_400</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="cardBackgroundColor">@color/teal_300</item>
        <item name="strokeColor">@color/white</item>
        <item name="rippleColor">@color/amber_300</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
